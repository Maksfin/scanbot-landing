//- List generator item_active
mixin ul(className, items, activeElem, addClass, mmodifierName)
	ul(class= className + '__list' class= mmodifierName)
		each item, index in items
			li(class= className + "__item")
				a(href="#" class= className + "__link" class=  addClass + ((activeElem === index) ? ' ' + className + '__link_active' : ''))= item


//- Svg icon
mixin icon(name,mod)
	- mod = mod || ''
	svg(aria-hidden="true" class="icon " + name + ' ' + mod)
		use(xlink:href="./assets/img/sprite.svg#" + name)